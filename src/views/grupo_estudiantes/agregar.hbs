<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Agregar Grupo Estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST">
                <div class="form-group">
                    <select class="form-control" name="idgrupo" required>
                        <option value="">Seleccione un Grupo</option>
                        {{#each grupos}}
                        <option value="{{idgrupo}}">{{num_grupo}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control" name="idestudiante" required>
                        <option value="">Seleccione un Estudiante</option>
                        {{#each estudiantes}}
                        <option value="{{idestudiante}}">{{nombre}} {{apellido}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
