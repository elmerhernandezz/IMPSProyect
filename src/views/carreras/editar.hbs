<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Modificar Carrera</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/carreras/editar/{{carrera.idcarrera}}">
                <div class="form-group">
                    <label for="idcarrera">ID de la Carrera</label>
                    <input type="text" class="form-control" name="idcarrera" value="{{carrera.idcarrera}}" required />
                </div>
                <div class="form-group">
                    <label for="carrera">Nombre de la Carrera</label>
                    <input type="text" class="form-control" name="carrera" value="{{carrera.carrera}}" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>