<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Modificar estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/estudiantes/editar/{{estudiante.idestudiante}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre" value="{{estudiante.nombre}}" placeholder="Nombre del estudiante" autofocus required />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido" value="{{estudiante.apellido}}" placeholder="Apellido del estudiante" required />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" value="{{estudiante.email}}" placeholder="Correo del estudiante" required />
                </div>
                <div class="form-group">
                    <select class="form-control" name="idcarrera" required> 
                        {{#each carreras}}
                            <option value="{{this.idcarrera}}" {{#if (eq this.idcarrera ../estudiante.idcarrera)}}selected{{/if}}>
                                {{this.carrera}}
                            </option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="usuario" value="{{estudiante.usuario}}" placeholder="Usuario del estudiante" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>